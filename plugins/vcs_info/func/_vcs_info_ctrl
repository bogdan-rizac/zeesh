# switches between different vcs display modes
_vcs_info_ctrl () {
    if [ -n "$VCS_INFO_ENABLED" ]; then
        if [ $1 ]; then
            case $1 in
                silent)
                    export VCS_INFO_VERBOSITY=silent
                    zstyle ':vcs_info:*' enable none
                ;;
                quiet)
                    export VCS_INFO_VERBOSITY=quiet
                    zstyle ':vcs_info:*' enable hg git svn
                    zstyle ':vcs_info:hg*:' use-simple true
                    zstyle ':vcs_info:hg*:*' get-bookmarks true
                    zstyle ':vcs_info:*' get-revision false
                    zstyle ':vcs_info:*' check-for-changes false
                ;;
                loud)
                    export VCS_INFO_VERBOSITY=loud
                    zstyle ':vcs_info:*' enable hg git svn
                    zstyle ':vcs_info:hg*:' use-simple false
                    zstyle ':vcs_info:hg*:*' get-bookmarks true
                    zstyle ':vcs_info:*' get-revision true
                    zstyle ':vcs_info:*' check-for-changes true
                ;;
            esac
        else
            case $VCS_INFO_VERBOSITY in
                silent)
                    export VCS_INFO_VERBOSITY=quiet
                    zstyle ':vcs_info:*' enable hg git svn
                    zstyle ':vcs_info:hg*:' use-simple true
                    zstyle ':vcs_info:hg*:*' get-bookmarks true
                    zstyle ':vcs_info:*' get-revision false
                    zstyle ':vcs_info:*' check-for-changes false
                ;;
                quiet)
                    export VCS_INFO_VERBOSITY=loud
                    zstyle ':vcs_info:*' enable hg git svn
                    zstyle ':vcs_info:hg*:' use-simple false
                    zstyle ':vcs_info:hg*:*' get-bookmarks true
                    zstyle ':vcs_info:*' get-revision true
                    zstyle ':vcs_info:*' check-for-changes true
                ;;
                loud)
                    export VCS_INFO_VERBOSITY=silent
                    zstyle ':vcs_info:*' enable none
                ;;
            esac
        fi
    else
        VCS_INFO_ENABLED=yes
        if [ $1 ]; then
            case $1 in
                silent)
                    export VCS_INFO_VERBOSITY=silent
                    zstyle ':vcs_info:*' enable none
                ;;
                quiet)
                    export VCS_INFO_VERBOSITY=quiet
                    zstyle ':vcs_info:*' enable hg git svn
                    zstyle ':vcs_info:hg*:' use-simple true
                    zstyle ':vcs_info:hg*:*' get-bookmarks true
                    zstyle ':vcs_info:*' get-revision false
                    zstyle ':vcs_info:*' check-for-changes false
                ;;
                loud)
                    export VCS_INFO_VERBOSITY=loud
                    zstyle ':vcs_info:*' enable hg git svn
                    zstyle ':vcs_info:hg*:' use-simple false
                    zstyle ':vcs_info:hg*:*' get-bookmarks true
                    zstyle ':vcs_info:*' get-revision true
                    zstyle ':vcs_info:*' check-for-changes true
                ;;
            esac
        else
            export VCS_INFO_VERBOSITY=loud
            zstyle ':vcs_info:*' enable hg git svn
            zstyle ':vcs_info:hg*:' use-simple false
            zstyle ':vcs_info:hg*:*' get-bookmarks true
            zstyle ':vcs_info:*' get-revision true
            zstyle ':vcs_info:*' check-for-changes true

            zstyle ':vcs_info:hg*' formats "%b:%i%m%u"
            zstyle ':vcs_info:hg*' actionformats "%b:%i%m%u"

            # hash changes branch misc
            zstyle ':vcs_info:git*' formats "%12.12i%u:%b%m"
            zstyle ':vcs_info:git*' actionformats "%12.12i%u:%b%m"
        fi
    fi
}
