#!/usr/bin/env zsh

if [ `hash hub 2>/dev/null` ]; then
    echo git-pull-request-auto requires hub.
    exit 1
fi

if [ ! "$1" ]; then
    echo 'Specify pull request to merge'
    exit 1
fi

origin_repo=`git config remote.origin.url | cut -d '/' -f 4,5`
hub merge https://github.com/$origin_repo/pull/$1
