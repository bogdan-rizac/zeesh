ve-init() {
    if [ $1 ]; then
        if [ -d $1 ]; then
            echo 'Please pick a different location for virtualenv'
        else
            virtualenv --no-site-packages --distribute $1
            echo 'export VIRTUAL_ENV_PROJECT_ROOT=$VIRTUALENVS_DIR/'$(basename $1) > $VIRTUALENVS_DIR/$1/bin/postactivate
            echo 'cd $VIRTUAL_ENV_PROJECT_ROOT' >> $VIRTUALENVS_DIR/$1/bin/postactivate
        fi
    else
        echo 'Please pick a location for virtualenv'
    fi
}
