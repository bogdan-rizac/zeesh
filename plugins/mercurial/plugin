# autoload comp
fpath=( $plugin_dir/comp $plugin_dir/func $fpath )
autoload -U $plugin_dir/func/*(:t) $plugin_dir/comp/*(:t)

# mercurial zeesh plugin
alias hgi='hg id -n -b -t'
alias hgs='hg status'
alias hga='hg add -v'
alias hgr='hg rm -f -v'
alias hgpl='hg pull'
alias hgps='hg push'
alias hgf='hg fetch'
alias hgu='hg up'
alias hgcp='hg ci && hg push'
alias hgm='hg merge'
alias hgl='hg log'
alias hg-merge-local='hg --config ui.merge=internal:local merge'
alias hg-merge-other='hg --config ui.merge=internal:other merge'
