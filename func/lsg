lsg() {
    local ls=ls; [[ -n $aliases[ls] ]] && local ls=$aliases[ls]
    local grep=grep; [[ -n $aliases[grep] ]] && local grep=$aliases[grep]
    if [ $1 ]; then
        if [[ $1 == '--clean' ]]; then
            ls | grep $argv[2,-1]
        else
            echo $ls | sh |  $grep -i "$@"
        fi
    fi
}
